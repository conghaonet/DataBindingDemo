<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="commonTitle"
            type="com.app2m.modulea.binding.model.CommonTitle"/>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_layout_height"
        android:minHeight="@dimen/common_title_layout_height"
        android:paddingLeft="@dimen/common_title_layout_padding_left_right"
        android:paddingStart="@dimen/common_title_layout_padding_left_right"
        android:paddingRight="@dimen/common_title_layout_padding_left_right"
        android:paddingEnd="@dimen/common_title_layout_padding_left_right"
        android:background="#00ff00">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@{commonTitle.leftBitmap}"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:onClick="onClickTitleBack"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{commonTitle.titleStr, default=Title}"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:onClick="onClickTitle"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{commonTitle.rightTextStr}"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</layout>
